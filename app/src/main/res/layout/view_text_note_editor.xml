<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_header_height"
        android:text="@string/add_text_note"
        >
    </TextView>

    <EditText
        android:id="@+id/text_note_edit_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_header_height"
        android:inputType="text"
        android:hint="@string/text_note_add"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_header_height">
        <ImageView
            android:id="@+id/text_note_cancel"
            android:layout_width="@dimen/view_header_icon_size"
            android:layout_height="@dimen/view_header_icon_size"
            />
        <ImageView
            android:id="@+id/text_note_save"
            android:layout_width="@dimen/view_header_icon_size"
            android:layout_height="@dimen/view_header_icon_size"
            />
    </LinearLayout>


</LinearLayout>
