<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
>
  <com.linkx.spn.view.components.timeline.TimelineView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/step_marker"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:marker_size="24dp"
      app:markerInCenter="false"
      app:line_orientation="vertical"
      app:line_size="2dp"
      app:line="@color/orange"
  />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_toEndOf="@+id/step_marker"
      android:layout_toRightOf="@+id/step_marker"
  >
    <TextView
        android:id="@+id/step_name"
        android:layout_height="24dp"
        android:layout_width="match_parent"
    />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.AlbumCard"
    >
    </android.support.v7.widget.CardView>
  </LinearLayout>
</RelativeLayout>
